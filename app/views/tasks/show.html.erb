<h1><%= @task.title %></h1>

<div class="div-details">
  <p><%= @task.details %></p>
</div>
<%= link_to "Edit this task", edit_task_path(@task) %>
<h3>
  <% if @task.completed %>
  <i class="far fa-check-square"></i><%= "This task is completed" %>
  <%else %>
  <i class="far fa-square"></i><%= "This task is not completed" %>
  <% end %></h3>

<%= link_to "Back to list", tasks_path  %>
